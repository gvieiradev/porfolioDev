---
import Nodejs from "../icons/Nodejs.astro";
import Tailwindcss from "../icons/Tailwindcss.astro";

const TAGS = {
  NODE: {
    name: "Node.js",
    class: "bg-[#155705] text-white",
    icon: Nodejs,
  },

  TAILWINDCSS: {
    name: "tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwindcss,
  },
};

const PROJECTS = [
  {
    title: "Trabel",
    description: "Template responsive with clean UI",
    link: "https://tabler.io/admin-template",
    github: "https://tabler.io/admin-template",
    image: "/projects/svgl.webp",
    tags: [TAGS.NODE, TAGS.TAILWINDCSS],
  },
];
---

{
  PROJECTS.map(({ title, description, tags, image }) => (
    <article>
      <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
      <p class="text-lg mb-4 text-pretty">{description}</p>
      <ul class="flex gap-x-2 flex-row mb-2">
        {tags.map((tag) => (
          <li>
            <span
              class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}
            >
              <tag.icon class="size-4" />
              {tag.name}
            </span>
          </li>
        ))}
      </ul>
      <img
        class="rounded shadow-2xl shadow-white/10"
        src={image}
        alt={`Captura de pantalla del proyecto ${image}`}
      />
    </article>
  ))
}
